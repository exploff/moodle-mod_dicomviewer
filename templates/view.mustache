{{!
    @template mod_dicomviewer/view_page
    Template for the view page
    Classes required for JS:
    -
    Data attributes required for JS:
    -
    Context variables required for this template:
    * description
    * urlViewer
    Example context (json):
    {
      "description": "Description....",
      "choiceviewer": "Choice your viewer",
      "urlViewerOhif": "https://moodle.org/mod/dicomviewer/viewerOhif.php",
      "urlViewerStone": "https://moodle.org/mod/dicomviewer/viewerStone.php"
    }
}}
<h2>Viewer DICOM Image</h2>
<div class="row mt-5">
    <div class="col-12 col-md-6 text-left">
        <div class="card border-primary">
            <div class="card-header">
                Description
            </div>
            <div class="card-body">
             {{{description}}}
            </div>
        </div>
       
    </div>
    <div class="col-12 col-md-6 text-center">
        <div class="card border-primary">
            <div class="card-header">
                {{choiceviewer}}
            </div>
            <div class="card-body">
                <input class="btn mr-5 mt-3 btn-outline-primary" type="button" value="OHIF Web Viewer" onclick="location.href='{{urlViewerOhif}}'">
                <input class="btn ml-5 mt-3 btn-outline-primary" type="button" value="Stone Web Viewer" onclick="location.href='{{urlViewerStone}}'">
            </div>
        </div>
    </div>
</div>